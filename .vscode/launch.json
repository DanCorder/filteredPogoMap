    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with local environment",
            "program": "${workspaceRoot}/node_modules/node-lambda/bin/node-lambda",
            "cwd": "${workspaceRoot}",
            "args": ["run", "--configFile", "${workspaceRoot}/local.env"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch with live environment",
            "program": "${workspaceRoot}/node_modules/node-lambda/bin/node-lambda",
            "cwd": "${workspaceRoot}",
            "args": ["run", "--configFile", "${workspaceRoot}/live.env"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}